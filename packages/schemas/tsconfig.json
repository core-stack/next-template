{
  "extends": "@packages/config-typescript/base.json",
  "compilerOptions": {
    "lib": ["ES2020"],
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "declaration": true,
    "composite": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
