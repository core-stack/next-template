{
  "name": "api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "copy:generated": "cp -r src/__generated__ dist/__generated__",
    "build": "tsc && pnpm run copy:generated",
    "start": "node dist/server.js",
    "db:generate": "dotenv -e ../../.env -- prisma generate",
    "db:migrate": "dotenv -e ../../.env -- prisma migrate deploy",
    "db:migrate:dev": "dotenv -e ../../.env -- prisma migrate dev",
    "db:push": "dotenv -e ../../.env -- prisma db push",
    "db:studio": "dotenv -e ../../.env -- prisma studio --browser none",
    "db:format": "prisma format",
    "prebuild": "pnpm run db:generate && pnpm run generate:api",
    "predev": "pnpm run db:generate && pnpm run generate:api",
    "generate:api": "tsx scripts/generate-api-types.ts",
    "generate:i18n": "tsx scripts/generate-i18n.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.800.0",
    "@aws-sdk/s3-request-presigner": "^3.800.0",
    "@bull-board/api": "^6.0.0",
    "@bull-board/fastify": "^6.0.0",
    "@fastify/cookie": "^11.0.2",
    "@packages/common": "workspace:*",
    "@packages/config-eslint": "workspace:*",
    "@packages/env": "workspace:*",
    "@packages/permission": "workspace:*",
    "@packages/schemas": "workspace:*",
    "@prisma/client": "^6.8.2",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.51.1",
    "dotenv": "^16.5.0",
    "fast-glob": "^3.3.3",
    "fastify": "^5.3.3",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^5.0.0",
    "handlebars": "^4.7.8",
    "i18next": "^25.2.1",
    "i18next-fs-backend": "^2.6.0",
    "i18next-http-middleware": "^3.7.4",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "node-cron": "^4.1.0",
    "nodemailer": "^6.10.1",
    "pino-pretty": "^13.0.0",
    "sharp": "^0.34.1",
    "zod": "^3.25.23",
    "zod-to-ts": "^1.2.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.29",
    "@types/nodemailer": "^6.4.17",
    "concurrently": "^9.1.2",
    "prisma": "^6.8.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "prisma": {
    "schema": "./prisma/schema"
  }
}
