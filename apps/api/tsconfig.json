{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": ["ES2021"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@packages/*": ["../../packages/*/src"]
    }
  },
  "exclude": ["node_modules", "dist", "coverage"],
  "include": ["src", "src/__generated__", "scripts", "src/**/*.ts"],
  "references": [
    { "path": "../../packages/common" },
    { "path": "../../packages/env" },
    { "path": "../../packages/permission" },
    { "path": "../../packages/schemas" },
  ]
}
