{
  "name": "next-template",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo dev",
    "test": "turbo run test",
    "check-types": "turbo run check-types",
    "lint": "turbo run lint",
    "start": "turbo run start",
    "db:generate": "cd packages/prisma && pnpm run generate",
    "db:migrate": "cd packages/prisma && pnpm run migrate",
    "db:migrate:dev": "cd packages/prisma && pnpm run migrate:dev",
    "db:push": "cd packages/prisma && pnpm run push",
    "db:studio": "cd packages/prisma && pnpm run studio"
  },
  "devDependencies": {
    "@swc/helpers": "^0.5.17",
    "dotenv-cli": "^7.4.4",
    "prettier": "^3.5.3",
    "turbo": "^2.5.3"
  },
  "packageManager": "pnpm@9.15.9",
  "engines": {
    "node": ">=18"
  }
}